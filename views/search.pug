extends layouts/main
include mixins/user

block content
    .formContainer
        form(action="/search" method="post")
            input(type="email" placeholder="Searching By E-mail" name="term")
        
    .search__users
        if findUsers
            each user in findUsers
                .userWrapper
                    +userBlock({
                        id:user.id,
                        name:user.name,
                        avatarUrl:user.avatarUrl,
                        message:user.message
                    })
                    if !isFriend
                        span.friendPlus  
                            <i class="fas fa-plus"></i>   
        else
            h3 Cant not find friend
